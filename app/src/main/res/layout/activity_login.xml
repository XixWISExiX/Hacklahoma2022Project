<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/chicken1"
    tools:context=".ui.login.LoginActivity">


    <EditText
        android:id="@+id/emailusername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:hint="  User ID/Email/Policy Number"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/layout_bg"/>

    <Button
        android:id="@+id/login"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#087f5b"
        android:onClick="personalinfo"
        android:text="LOG IN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/submitsignup"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#087f5b"
        android:onClick="sign_up"
        android:text="SIGN UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="  Password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailusername"
        android:background="@drawable/layout_bg"/>

    <Button
        android:id="@+id/temp"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#087f5b"
        android:onClick="sign_up"
        android:text="SIGN UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>